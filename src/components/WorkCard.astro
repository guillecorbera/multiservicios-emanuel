---
// src/components/WorkCard.astro
import WorkGalleryModal from './WorkGalleryModal.astro';
import { getTranslation, type Lang } from '../utils/i18n';

// Definición de tipos para las props
interface Work {
    id: number;
    title_es: string;
    title_ca: string;
    title_en: string;
    description_es: string;
    description_ca: string;
    description_en: string;
    main_image: string;
    gallery_images: string[];
}

interface Props {
    work: Work;
    currentLang: Lang;
}

const { work, currentLang } = Astro.props;

// Función para obtener la traducción específica para el trabajo
const getWorkText = (key: 'title' | 'description') => {
    return work[`${key}_${currentLang}`] || work[`${key}_es`]; // Fallback a español
}

const t = (key: string) => getTranslation(currentLang, key);
const modalId = `modal-${work.id}`;
const title = getWorkText('title');
---

<article class="group bg-white rounded-xl shadow-lg hover:shadow-2xl overflow-hidden transform hover:-translate-y-2 transition-all duration-300 border border-gray-100 flex flex-col h-full">
    <figure class="relative h-64 overflow-hidden flex-shrink-0">
        <!-- Placeholder de carga -->
        <div class="absolute inset-0 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center transition-opacity duration-300">
            <svg class="w-16 h-16 text-gray-400 opacity-50" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
            </svg>
        </div>
        
        <!-- Imagen principal -->
        <img 
            src={work.main_image} 
            alt={title} 
            loading="lazy" 
            class="w-full h-full object-cover transition-all duration-700 ease-out group-hover:scale-110 opacity-0"
            onload="this.style.opacity='1'; this.previousElementSibling.style.opacity='0';"
            onerror="this.style.opacity='0.5'; this.previousElementSibling.style.opacity='1';"
        />
        
        <!-- Overlays -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="absolute top-4 right-4 bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            {work.gallery_images.length} {work.gallery_images.length === 1 ? 'imagen' : 'imágenes'}
        </div>
    </figure>

    <div class="p-6 flex flex-col flex-grow">
        <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-blue-600 transition-colors duration-300 min-h-[3.5rem] flex items-start">{title}</h3>
        <div class="text-gray-600 mb-6 leading-relaxed text-sm flex-grow overflow-hidden">
            <p class="line-clamp-description">
                {getWorkText('description')}
            </p>
        </div>
        
        <button 
            type="button" 
            onclick={`window.openWorkModal('${modalId}')`}
            class="w-full py-3 px-6 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl group mt-auto"
        >
            <span class="flex items-center justify-center gap-2">
                {t('works_view_gallery')}
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </span>
        </button>
    </div>
</article>

<style>
    .line-clamp-description {
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<WorkGalleryModal 
    workId={work.id} 
    title={title} 
    images={work.gallery_images}
    currentLang={currentLang}
/>