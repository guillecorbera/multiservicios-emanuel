---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import NuestrosTrabajos from '../components/NuestrosTrabajos.astro';
import Servicios from '../components/Servicios.astro';
import Consejos from '../components/Consejos.astro';
import { getTranslation, type Lang } from '../utils/i18n';

// Idioma por defecto
const currentLang: Lang = 'es';

// Función de traducción para el cuerpo de la página
const t = (key: string) => getTranslation(currentLang, key);

// Título de la página 
const pageTitle = "Multiservicios Emanuel | La Solución a tus Reformas";
---

<Layout title={pageTitle}>
    <Header currentLang={currentLang} />

    <main class="text-gray-800">
        <section id="inicio" class="py-24 bg-gradient-to-br from-blue-50 to-blue-100 text-center relative overflow-hidden">
            <div class="absolute inset-0 bg-white/50"></div>
            <div class="relative z-10 container mx-auto px-4">
                <h1 class="text-5xl md:text-6xl font-extrabold text-blue-800 mb-6 animate-fade-in" data-translate="hero_title">
                    Multiservicios Emanuel
                </h1>
                <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-3xl mx-auto leading-relaxed" data-translate="hero_slogan">
                    {t('hero_slogan')}
                </p>
                <button 
                    data-section="contacto"
                    data-translate="cta_request_quote"
                    class="nav-link inline-flex items-center gap-2 px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl cursor-pointer border-none"
                >
                    {t('cta_request_quote')}
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </button>
            </div>
        </section>

        <NuestrosTrabajos currentLang={currentLang} />

        <Servicios currentLang={currentLang} />

        <Consejos currentLang={currentLang} />

        <hr class="my-8" />

        <Contact currentLang={currentLang} />

    </main>

    <Footer currentLang={currentLang} />
</Layout>